  "bugs": {
    "url": "https://github.com/wavesoft/local-echo/issues"
  },
  "homepage": "https://github.com/wavesoft/local-echo#readme",
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@kobakazu0429/eslint-config-typescript": "^2.1.3",
    "@types/jest": "^27.0.1",
    "@types/shell-quote": "^1.7.1",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "eslint": "^7.32.0",
    "jest": "^27.1.0",
    "microbundle": "^0.13.3",
    "regenerator-runtime": "^0.12.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2",
    "xterm": "^4.13.0"
  },
  "dependencies": {
    "shell-quote": "^1.7.2"
  }
