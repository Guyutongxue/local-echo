{
  "name": "local-echo",
  "version": "0.2.0",
  "description": "A local echo controller for xterm.js",
  "type": "module",
  "source": "./src/index.ts",
  "exports": "./dist/index.modern.js",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "build": "microbundle",
    "dev": "microbundle watch",
    "test": "jest --silent=false --verbose false",
    "lint:eslint": "eslint \"./{src,test,lib}/**/*.{js,ts}\" --fix",
    "lint:prettier": "prettier \"./{src,test,lib}/**/*.{js,ts}\" --write",
    "prepublishOnly": "yarn build"
  },
  "repository": "git+https://github.com/wavesoft/local-echo.git",
